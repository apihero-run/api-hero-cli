{
	"name": "apihero",
	"version": "1.0.0",
	"license": "MIT",
	"bin": {
		"apihero": "./bin/run"
	},
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "tsc && chmod +x dist/index.js",
		"start": "npm run build && dist/index.js",
		"pretest": "npm run build",
		"test": "xo && ava"
	},
	"files": [
		"dist/index.js"
	],
	"dependencies": {
		"@apihero/github": "^1.1.4-beta.2",
		"@boost/cli": "^4.0.0",
		"@npmcli/promise-spawn": "^3.0.0",
		"dotenv": "^16.0.1",
		"ink": "^3.2.0",
		"ink-big-text": "^1.2.0",
		"ink-gradient": "^2.0.0",
		"ink-spinner": "^4.0.3",
		"react": "^17.0.2",
		"tiny-invariant": "^1.2.0",
		"ts-node": "^10.9.1",
		"zod": "^3.18.0"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"source/": "dist/"
			}
		}
	},
	"xo": {
		"extends": "xo-react",
		"rules": {
			"react/prop-types": "off"
		}
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/ink-big-text": "^1.2.1",
		"@types/ink-gradient": "^2.0.1",
		"@types/pacote": "^11.1.5",
		"@types/react": "^18.0.17",
		"ava": "^4.3.1",
		"chalk": "^4.1.2",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^2.1.0",
		"typescript": "^4.7.4",
		"xo": "^0.39.1"
	}
}
